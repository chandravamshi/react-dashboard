{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true, 
    "noEmit": true,
    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": true 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}